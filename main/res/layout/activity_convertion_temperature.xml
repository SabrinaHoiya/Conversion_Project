<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temp"
    tools:context=".ConvertionTemperatureActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="384dp"
        android:layout_height="96dp"
        android:text="Conversion de Température "
        android:textColor="#9C27B0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="269dp"
        android:layout_height="157dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature"
        app:layout_constraintVertical_bias="0.181">

        <RadioButton
            android:id="@+id/conv1"
            android:layout_width="281dp"
            android:layout_height="76dp"
            android:buttonTint="#FFFFFF"
            android:shadowColor="#E91E63"
            android:text="Celcius ==> Farenheit"
            android:textColor="#000000"
            android:textColorHighlight="#E91E63"
            android:textColorHint="#E91E63"
            android:textColorLink="#E91E63"
            android:textCursorDrawable="@android:drawable/alert_dark_frame"
            android:textSize="24sp"
            android:visibility="visible"
            app:buttonTint="#E91E63" />

        <RadioButton
            android:id="@+id/conv2"
            android:layout_width="294dp"
            android:layout_height="63dp"
            android:buttonTint="#FFFFFF"
            android:shadowColor="#E91E63"
            android:text="Farenheit ==> Celcius"
            android:textColor="#000000"
            android:textColorHighlight="#E91E63"
            android:textColorHint="#E91E63"
            android:textColorLink="#E91E63"
            android:textCursorDrawable="@android:drawable/alert_dark_frame"
            android:textSize="24sp"
            android:visibility="visible"
            app:buttonTint="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/convertir"
        android:layout_width="128dp"
        android:layout_height="77dp"
        android:layout_marginTop="56dp"
        android:background="#9C27B0"
        android:text="Convertir.."
        app:backgroundTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup1" />

    <TextView
        android:id="@+id/result"
        android:layout_width="294dp"
        android:layout_height="57dp"
        android:background="#9C27B0"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertir"
        app:layout_constraintVertical_bias="0.904" />

    <EditText
        android:id="@+id/temperature"
        android:layout_width="375dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="température à convertit"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#E91E63"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.066" />

</androidx.constraintlayout.widget.ConstraintLayout>